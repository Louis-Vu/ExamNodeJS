<!DOCTYPE html>
<html lang="en">
<head>
  <title>Products</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="/examcss/home.css" rel="stylesheet">
</head>
<body>

<div class="container mt-3">
    <h1>Products</h1>
    <a class="add" href="/auth/add">
        <button >Add </button>
    </a>    
   <table class="table table-bordered table-sm">   
   <thead class="thead-dark">
      <tr>
        <th>ProductCode</th>
        <th>ProductName</th>
        <th>ProductDate</th>
        <th>ProductOriginPricee</th>
        <th>Quantity</th>
        <th>ProductStoreCode</th>
      </tr>
    </thead>
    <tbody>
        <% product.forEach((product)=>{ %>
            <tr>
            
                 <td><%- product.productCode %></td>
                 <td><%- product.productName %></td>
                 <td><%- product.productDate %></td>
                 <td><%- product.productOriginPrice %></td>
                 <td><%- product.quantity %></td>
                 <td><%- product.productStoreCode %></td>

                <td>
                   
                    <a href="/auth/product/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                  </td>
                  <td>
                   
                    <a href="/auth/product/delete/<%= product._id %>" class="btn btn-warning btn-sm">Update</a>
                  </td>

            </tr>
           

        <% }) %>
            

    </tbody>
  </table>
  
</div>

</body>
</html>